set realname = "John Doe"
set from = "user1@futuretech.pt"

# TLS settings
set ssl_force_tls = yes
set ssl_starttls = yes

# Basic display settings
set header_cache=~/.cache/mutt

# Configure editor
set editor = "vim"

# Automatically fetch mail when starting
set mail_check = 60
